@using System.Collections.Concurrent
@model Mentor.Models.LoginViewModel
@{
    Layout = "~/Views/Shared/_NotLoggedInLayout.cshtml";
}
@Styles.Render("~/Content/bootstrap.min.css")
@Styles.Render("~/Content/css/account.css")

<div class="page-wrapper-login">
    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-group center-align ", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="container">
            <div class="center-div rounded-content center-horizontal">
                <h2 class="title">
                    Login
                </h2>
                <div class="row">
                    <div class="form-group col-md-10 center-horizontal input-margin">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.TextBoxFor(m => m.Email, new { @id = "user_email", @class = "form-control", @placeholder = "Email" })
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-10 center-horizontal input-margin">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-md-10 center-horizontal input-margin check">
                        <div class="checkbox">
                            @Html.CheckBoxFor(m => m.RememberMe, new { @class = "col-md-1" })
                            @Html.LabelFor(m => m.RememberMe, new { @class = "col-md-11" })
                        </div>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="form-group">
                        <input value="Log in" class="btn btn--green btn--large col-md-8 center-horizontal input-margin" type="submit" />
                    </div>
                </div>
            </div>
        </div>
    }
</div>


